<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ChoiceBox?>
<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AjouterPubliciteController">
        <VBox layoutX="50.0" layoutY="30.0" prefHeight="404.0" prefWidth="445.0" spacing="10.0">
            <Label text="Ajouter Publicité">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <TextField fx:id="fxNom" promptText="Nom de la publicité" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Date de début : " />
                <DatePicker fx:id="fxDateDebut" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Date de fin : " />
                <DatePicker fx:id="fxDateFin" />
            </HBox>
            <TextField fx:id="fxImage" promptText="Image de la publicité" />
            <Button fx:id="btnIcon" layoutX="424.0" layoutY="236.0" mnemonicParsing="false" onMouseClicked="#chooseFile" prefHeight="26.0" prefWidth="55.0" text="Image"/>
            <ImageView fx:id="imageaffi" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <ChoiceBox fx:id="choiceBoxEvenement" />
            <Button fx:id="btnAjouterPublicite" onAction="#savePublicite" text="Ajouter Publicité" />


        </VBox>

</AnchorPane>
